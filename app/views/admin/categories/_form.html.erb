<%= form_for(@category, :url => path, :html => {:class => "form-horizontal"}) do |f| %>
	<div class="form-group">
		<label for="name" class="col-lg-2 control-label">名称</label>
		<div class="col-lg-10">
		<%= f.text_field :name, :autofocus => true,  :class => "form-control", :placeholder => "名称" %>
		<%= f.submit "#{btn_text}", :class => "btn btn-primary", :id => "add_app"%>
		</div>
	</div>	
<% end %>