<div class="bs-example" id="category_res"> 
<div class="row app-list">
	<div class="col-lg-2"></div>
	<div class="col-lg-8">
		<div class="panel panel-rank">
			<div class="panel-heading">
			    <div>编辑章节</div>
			</div> 
			
			<div class="panel-action">
			    <div class="navbar">
					<span><%= link_to "返回", admin_book_sections_path, :class => 'navbar-link'%></span>
				</div>
			</div> 
			          
			<div class="row app-list">
			    <%= form_for(@section, :url => admin_update_book_section_path, method: :put, :html => {:class => "form-horizontal"}) do |f| %>
			    	<%= hidden_field_tag "section[book_id]", @book.id%>
					<div class="form-group">
						<label for="name" class="col-lg-2 control-label">章节号</label>
						<div class="col-lg-10">
						<%= f.text_field :section_number, :autofocus => true,  :class => "form-control", :placeholder => "章节号" %>
						</div>
					</div>

					<div class="form-group">
						<label for="name" class="col-lg-2 control-label">名称</label>
						<div class="col-lg-10">
						<%= f.text_field :name, :class => "form-control", :placeholder => "名称" %>
						</div>
					</div>

					<div class="form-group">
						<label for="name" class="col-lg-2 control-label">译文</label>
						<div class="col-lg-10">
							<%= f.text_area :content, :class => "form-control" %>
							<%= f.submit "添加译文", :class => "btn btn-primary", :id => "upload_apk"%>
						</div>
					</div>	


				<% end %>
			</div> 
		</div>
	</div>
	<div class="col-lg-2"></div>
</div>
</div>