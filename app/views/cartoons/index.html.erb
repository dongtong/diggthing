<div class="bs-example" id="cartoon_rank"> 
  <div class='row notice'>
   <div class="col-lg-1"></div>
  <div class="col-lg-10">
    <% if flash[:notice]%>
      <div class="row alert alert-danger"><button type="button" class="close" data-dismiss="alert">×</button><%= flash[:notice] %></div>
    <%end %>
  </div>
   <div class="col-lg-1"></div>
</div>
  <div class="row">
    <div class="col-lg-1"></div>
  	<div class="col-lg-8">
    	<div class="panel panel-rank">
          <div class="panel-heading"><%= @title%></div> 
          <%@cartoons.in_groups_of(4).each do |cartoon_group|%>
            <div class="row app-list">
              <%cartoon_group.compact.each do |cartoon|%>
                <div class="col-lg-3">
                  <div class="thumbnail">
                    <div class="app-icon">
                      <%= link_to (image_tag cartoon.thumb_pic.url),   show_cartoons_path(@curr_nav, cartoon.id) %>
                    </div>      
                    <div class="caption">
                      <div class="row cartoon-info">
                        <div class="col-lg-12 cartoon-title"><p class="title"><%= cartoon.title %></p></div>
                      </div>
                      <div class="row cartoon-card">
                        <div class="col-lg-6 cartoon-info">
                          <span class="download-times"><%= display_icon 'download_number', :style=>"width: 16px; height:16px;"%><%= cartoon.download_number %></span>
                        </div>
                        <div class="col-lg-6 cartoon-info"><%= link_to "查看", show_cartoons_path(@curr_nav, cartoon.id), :class => 'btn btn-info btn-mini'%></div>
                      </div>
                    </div>
                  </div>
                </div>
              <%end%>
      	    </div> 
          <%end%>
    	</div>
    </div> <!--col-lg-9-->   
    <div class="col-lg-2">
    	<div class="panel panel-rank">
    		<div class="panel-heading">漫画下载排行</div> 
    		<ul class="list-group">
          <%Cartoon.order("download_number desc").each_with_index do |cartoon, index|%>
            <li class="list-group-item">
              <span class="badge <%= "badge-success" if index <= 2 %>"><%= index + 1%></span>
              <%=link_to show_cartoons_path(@curr_nav, cartoon.id) do %>
                <%= cartoon.title%>
              <%end%>
            </li>
          <%end%>
    		</ul>
    	</div>
    </div><!--col-lg-9-->  
    <div class="col-lg-1"></div> 
  </div>
</div>
