<div class="bs-example" id="detail"> 
  <div class="row">
    <%= hidden_field_tag :cartoon_id, @cartoon.id%>
  	<div class="col-lg-12">
      <%cache @cartoon do %>
      	<div class="panel panel-content">
            <div class="row">
              <div class="col-lg-3 first-col"></div>
              <div class="col-lg-6 bc">
                <ul class="breadcrumb">
          			  <li><a href="/">首页</a></li>
          			  <li class="active"><%= @cartoon.title%></li>
          			</ul>
              </div>
              <div class="col-lg-3 last-col"></div>
            </div>

            <div class="row">
            	<div class="col-lg-3">
              </div>
    	        <div class="col-lg-6 cartoon-img">
                <div class="row page-action">
                  <%= raw show_pre_next_link(@curr_nav, @cartoon) %>
                </div>
                <div class="row cartoon-original-pic">
    	        	  <%= image_tag @cartoon.original_pic.url, class: "original-pic"%>
                </div>
                <div class="row comment-area">
                  <div class="col-lg-4">
                      <div id="comment_title"><h4>评论</h4></div>
                  </div>
                </div>
                <div class="row comment-cartoon">
                  <%= render :partial => 'shared/comment', :locals => {:comment_obj => @cartoon}%>
                </div>
    	        </div>
              <div class="col-lg-3">
              </div>
            </div>           
      	</div>
      <%end%>
    </div> 
    
  </div>
</div>
