<div class="bs-example" id="login"> 
	<div class="row">
		<div class="col-lg-4"></div>
		<div class="col-lg-4">
			<div class="panel">
				<div class="panel-heading">
				    <h3 class="panel-title">登录</h3>
				</div>
			  	<div class="panel-content">
					<%= form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => {:class => "form-horizontal"}) do |f| %>

						<div class="form-group">
						    <label for="login" class="col-lg-2 control-label">账号</label>
						    <div class="col-lg-10">
						       <%= f.text_field :login, :autofocus => true,  :class => "form-control", :placeholder => "用户名或邮箱" %>
						    </div>
					  	</div>

					  	<div class="form-group">
						    <label for="password" class="col-lg-2 control-label">密码</label>
						    <div class="col-lg-10">
						        <%= f.password_field :password, :class => "form-control", :placeholder => "密码" %>
						   	    <%= f.submit "登录", :class => "btn btn-primary", :id => "sign_in_btn"%>
						    </div>
					  	</div>
					<% end %>
					<% #render "devise/shared/links" %>
				</div>
			</div>
		</div><!--Login-->
		<div class="col-lg-4"></div>
	</div>
</div>
