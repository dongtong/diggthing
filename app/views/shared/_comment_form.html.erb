<%= form_for(Comment.new, :url => comments_create_path, :html => {:class => "form-horizontal"}) do |f| %>
        <%= f.hidden_field :cartoon_id, value: cartoon_id %>
        <%= f.hidden_field :user_id, value: current_user.id%>
        <%= f.text_area :content, class: "form-control col-lg-10", rows: 4%>
        <%= f.submit "发表评论", :class => "btn btn-primary", :id => "add_comment"%>
<%end%>